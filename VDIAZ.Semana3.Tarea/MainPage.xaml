<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VDIAZ.Semana3.Tarea.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Semana 3" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Entry x:Name="txtUsuario" Text="" Placeholder="Usuario"></Entry>
        <Entry x:Name="txtContrasena" IsPassword="true" Text="" Placeholder="Contraseña"></Entry>
        <Button x:Name="btnVista2" Text="Iniciar sesión" Clicked="btnVista2_Clicked"></Button>

        <Label FontSize="16" Padding="30,24,30,0">
            <Label.FormattedText>
                <FormattedString>
                    <FormattedString.Spans>
                        <Span Text="Noveno A, Vinicio Díaz"/>
                    </FormattedString.Spans>
                </FormattedString>
            </Label.FormattedText>
        </Label>
    </StackLayout>

</ContentPage>
